<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/main_toolbar_ibtn_side_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#00FFFFFF"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/builday_icon_side_menu"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="0dp" />

            <ImageButton
                android:id="@+id/main_toolbar_ibtn_month_prev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#00FFFFFF"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/builday_icon_month_prev"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="411dp" />

            <ImageButton
                android:id="@+id/main_toolbar_ibtn_day_prev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#00FFFFFF"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/builday_icon_day_prev"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="411dp" />

            <TextView
                android:id="@+id/main_toolbar_tv_cur_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:text="cur date"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="411dp" />

            <ImageButton
                android:id="@+id/main_toolbar_ibtn_day_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#00FFFFFF"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/builday_icon_day_next"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="411dp" />

            <ImageButton
                android:id="@+id/main_toolbar_ibtn_month_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#00FFFFFF"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/builday_icon_month_next"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="411dp" />

            <ImageButton
                android:id="@+id/main_toolbar_ibtn_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#00FFFFFF"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/builday_icon_calendar"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="411dp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/main_drawer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_top_toolbar"
        app:layout_constraintVertical_bias="0.0">

        <fragment
            android:id="@+id/map"
            android:name="com.example.builday365.MapsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout="@layout/fragment_maps" />

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/main_navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/white"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/drawer_header"
            app:menu="@menu/drawer_menu" />

    </androidx.drawerlayout.widget.DrawerLayout>

    <CalendarView
        android:id="@+id/main_calendarview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_top_bottom"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_top_toolbar"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout_timebar"
        android:layout_width="105dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="180dp"
        android:background="@drawable/background_sidebar"
        app:layout_constraintBottom_toBottomOf="@+id/main_drawer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_top_toolbar">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="14dp"
            android:text="Today"
            android:textColor="@color/default_color"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/main_sidebar_layout_total_time"
            app:layout_constraintEnd_toEndOf="@+id/main_sidebar_layout_total_time"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <ImageButton
            android:id="@+id/main_sidebar_ibtn_activity"
            android:layout_width="15dp"
            android:layout_height="0dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/main_sidebar_ibtn_memo"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            app:srcCompat="@drawable/builday_icon_activity"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/main_sidebar_ibtn_memo"
            android:layout_width="15dp"
            android:layout_height="0dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            app:srcCompat="@drawable/builday_icon_memo"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:text="00:00"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/main_sidebar_layout_total_time"
            app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_sidebar_layout_total_time"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/main_sidebar_tv_cur_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nn:nn"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/main_sidebar_layout_total_time"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-8dp"
            android:text="24:00"
            android:textColor="@color/default_color"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/main_sidebar_layout_total_time"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintStart_toEndOf="@+id/main_sidebar_ibtn_activity"
            app:layout_constraintTop_toTopOf="@+id/main_sidebar_layout_total_time"
            app:layout_constraintVertical_bias="1.0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_sidebar_layout_total_time"
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:background="@color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_sidebar_layout_cur_time"
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_marginBottom="40dp"
            android:background="@color/blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_sidebar_layout_total_time"
            app:layout_constraintVertical_bias="0.0">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_sidebar_layout_remain_time"
            android:layout_width="9.5dp"
            android:layout_height="0dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/border_all_dir_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.858"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_sidebar_layout_total_time"
            app:layout_constraintVertical_bias="1.0">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/main_timebar_ibtn_add_section"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/main_sidebar_layout_total_time"
            app:layout_constraintStart_toStartOf="@+id/main_sidebar_layout_total_time"
            app:layout_constraintTop_toBottomOf="@+id/main_sidebar_layout_total_time"
            app:srcCompat="@drawable/builday_icon_add"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout_timesection"
        android:layout_width="105dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="180dp"
        android:background="@drawable/background_sidebar"
        app:layout_constraintBottom_toBottomOf="@+id/main_drawer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_top_toolbar"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/main_timesection_iv_ctrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/builday_icon_timesection_updown"
            app:layout_constraintBottom_toBottomOf="@+id/main_timesection_tv_click_time"
            app:layout_constraintEnd_toStartOf="@+id/main_timesection_tv_click_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_timesection_tv_click_time" />

        <TextView
            android:id="@+id/main_timesection_tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:text="00:00"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/main_timesection_layout_total_time"
            app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_timesection_layout_total_time"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/main_timesection_tv_cur_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nn:nn"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/main_timesection_layout_total_time"
            app:layout_constraintEnd_toEndOf="@+id/main_timesection_tv_start_time"
            app:layout_constraintStart_toStartOf="@+id/main_timesection_tv_start_time"
            app:layout_constraintTop_toTopOf="@+id/main_timesection_layout_total_time"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/main_timesection_tv_click_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nn:nn"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/main_timesection_layout_total_time"
            app:layout_constraintEnd_toEndOf="@+id/main_timesection_tv_start_time"
            app:layout_constraintStart_toStartOf="@+id/main_timesection_tv_start_time"
            app:layout_constraintTop_toTopOf="@+id/main_timesection_layout_total_time"
            app:layout_constraintVertical_bias="0" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_timesection_layout_total_time"
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:background="@color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_timesection_layout_cur_time"
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_marginBottom="40dp"
            android:background="@color/red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_timesection_layout_total_time"
            app:layout_constraintVertical_bias="0.0"></androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_timesection_layout_remain_time"
            android:layout_width="9.5dp"
            android:layout_height="0dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/border_all_dir_red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.858"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_timesection_layout_total_time"
            app:layout_constraintVertical_bias="0.0"></androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/main_timesection_ibtn_palette"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/main_timesection_layout_total_time"
            app:layout_constraintStart_toStartOf="@+id/main_timesection_layout_total_time"
            app:layout_constraintTop_toBottomOf="@+id/main_timesection_layout_total_time"
            app:srcCompat="@drawable/builday_icon_palette"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/main_timesection_ibtn_cancel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/main_timesection_ibtn_palette"
            app:layout_constraintStart_toEndOf="@+id/main_timesection_ibtn_ok"
            app:layout_constraintTop_toBottomOf="@+id/main_timesection_layout_total_time"
            app:srcCompat="@drawable/builday_icon_cancel"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/main_timesection_ibtn_ok"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/main_timesection_ibtn_palette"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_timesection_layout_total_time"
            app:srcCompat="@drawable/builday_icon_ok"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout_palette"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="170dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_top_toolbar"
        app:layout_constraintVertical_bias="0.56"
        tools:visibility="gone">

        <include
            layout="@layout/palette_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_dialog_make_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_top_toolbar"
        app:layout_constraintVertical_bias="0.35000002"
        tools:visibility="gone">

        <include
            layout="@layout/dialog_make_section"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_top_toolbar"
        app:layout_constraintVertical_bias="0.99"
        ads:adSize="BANNER"
        ads:adUnitId="@string/admob_ad_id"></com.google.android.gms.ads.AdView>


</androidx.constraintlayout.widget.ConstraintLayout>