<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/border_all_dir_default"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/palette_iv_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/palette_circle"
            app:tint="@color/blue" />

        <ImageView
            android:id="@+id/palette_iv_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/palette_circle"
            app:tint="@color/red" />

        <ImageView
            android:id="@+id/palette_iv_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/palette_circle"
            app:tint="@color/green" />

        <ImageView
            android:id="@+id/palette_iv_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/palette_circle"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/palette_iv_yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/palette_circle"
            app:tint="@color/yellow" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/palette_iv_purple"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/palette_circle"
            app:tint="@color/purple" />

        <ImageView
            android:id="@+id/palette_iv_skyBlue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/palette_circle"
            app:tint="@color/sky_blue" />

        <ImageView
            android:id="@+id/palette_iv_brown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/palette_circle"
            app:tint="@color/brown" />

        <ImageView
            android:id="@+id/palette_iv_pink"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/palette_circle"
            app:tint="@color/pink" />

        <ImageView
            android:id="@+id/palette_iv_lightGreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/palette_circle"
            app:tint="@color/light_green" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/palette_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_button"
            android:text="OK"
            android:textColor="@color/black"
            android:textSize="8sp"
            app:backgroundTint="@color/transparent"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/palette_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_button"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="8sp"
            app:backgroundTint="@color/transparent"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

</LinearLayout>